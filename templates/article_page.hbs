<div class="division-group">
    <div id="article-heading" class="division top secondary">
        <div>
            {{breadcrumbs}}
            <h1>{{article.title}}</h1>

            <div class="date">
                {{#is article.created_at article.edited_at}}
                    <span>Creado {{date article.created_at timeago=true}}</span>
                {{else}}
                    <span>Actualizado {{date article.edited_at timeago=true}}</span>
                {{/is}}
            </div>
        </div>
    </div>
</div>

<article>
    {{article.body}}
</article>

{{#with article}}
    <div class="article-votes">
        <h2 class="article-votes-question" id="article-votes-label">{{t
                'was_this_article_helpful'}}</h2>
        <div class="article-votes-controls" role="group" aria-labelledby="article-votes-label">
            {{vote 'up' class='button article-vote article-vote-up' selected_class="button-primary"}}
            {{vote 'down' class='button article-vote article-vote-down'
                   selected_class="button-primary"}}
        </div>
    </div>
{{/with}}